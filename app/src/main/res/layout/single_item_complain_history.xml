<!--                    android:layout_width="0dp"-->
<!--                    android:layout_height="wrap_content"-->
<!--                    android:layout_weight="1"-->
<!--                    android:text="Delete"-->
<!--                    android:backgroundTint="@color/primary_color"-->
<!--                    android:layout_margin="@dimen/_10sdp">-->
<!--                </Button>-->

            </LinearLayout>

        </LinearLayout>



    </androidx.cardview.widget.CardView>

</LinearLayout>