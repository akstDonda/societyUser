<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:background="@color/primary_color"
    android:layout_height="wrap_content">

   

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_10sdp"
        android:background="@color/white">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_9sdp"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/complain_history_img"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_margin="@dimen/_10sdp"
                    android:src="@color/primary_color"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">
                    <TextView
                        android:id="@+id/complain_history_type"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Type : WatchMan"
                        android:textSize="@dimen/_15sdp"
                        android:textStyle="bold"/>
                    <TextView
                        android:id="@+id/complain_history_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Title : elevator not working"
                        android:textSize="@dimen/_15sdp"
                        />
                    <TextView
                        android:id="@+id/complain_history_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date: 11/07/2022"/>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:id="@+id/complain_history_status"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status : Complete"
                android:textSize="@dimen/_15ssp"
                android:gravity="center_horizontal"/>
            <TextView
                android:id="@+id/complain_history_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:text="Description: something isuue but i sont understand what issue"
                android:textAlignment="textStart"
                />
            <TextView
                android:id="@+id/home_no"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_7sdp"
                android:text="Home No : 1208"
                android:gravity="end"
                />


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
