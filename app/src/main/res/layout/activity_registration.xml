<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="8"
    android:orientation="vertical"
    tools:context=".RegistrationActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_12sdp"
            android:layout_weight="1.6"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="3sp"
            app:cardElevation="8dp"
            tools:ignore="NestedWeights">

            <ImageButton
                android:id="@+id/registraion_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:layout_gravity="center_horizontal"
                android:contentDescription="back btn"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/welcome_text_signUp"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="5.3">

        <EditText
            android:id="@+id/registation_userName_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Enter User name"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="text"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/registation_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/registation_password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/registation_re_password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Conform Password"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="textPassword"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/registation_society_name_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Select Society Name"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="textPassword"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/registation_House_No_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_text_background"
            android:hint="Enter House Number"
            android:padding="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:inputType="textPassword"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/registraion_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_22sdp"
            android:padding="@dimen/_10sdp"
            android:backgroundTint="@color/primary_color"
            android:text="Register" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:outlineAmbientShadowColor="@color/primary_color"
            android:outlineSpotShadowColor="@color/primary_color"
            android:layout_gravity="center"
            android:progressTint="@color/primary_color"
            android:visibility="gone"
            android:backgroundTint="@color/primary_color"/>


    </LinearLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/login_text_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/text_register_bottom"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>







</LinearLayout>