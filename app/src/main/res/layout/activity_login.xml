<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:weightSum="8"
    android:orientation="vertical"
    tools:context=".welcome.LoginActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView"
            android:layout_width="@dimen/_45sdp"
            android:layout_height="0dp"
            android:layout_margin="@dimen/_12sdp"
            android:layout_weight="1.6"
            android:layout_gravity="start"
            android:backgroundTint="@color/white"
            app:cardCornerRadius="3sp"
            app:cardElevation="8dp"
            tools:ignore="NestedWeights">

            <ImageButton
                android:id="@+id/login_back_btn"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="@dimen/_4sdp"
                android:src="@drawable/baseline_arrow_circle_left_24"
                android:layout_gravity="center_horizontal"
                android:contentDescription="back btn"
                tools:ignore="HardcodedText" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1"
        android:weightSum="2"
        tools:ignore="UselessParent">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:text="@string/welcome_text_signIn"
            android:textSize="@dimen/_25ssp"
            android:textColor="@color/primary_color"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="3.5">

        <EditText
            android:id="@+id/login_email_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Your Email"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/login_password_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_8sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Your Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/btn_txt_forgot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end"
            android:text="Forgot Password ?"
            android:textColor="@color/light_white"
            android:layout_marginEnd="@dimen/_20sdp"
            android:textStyle="italic"
            android:fontFamily="@font/magra_bold"/>



        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_13sdp"
            android:layout_marginEnd="@dimen/_13sdp"
            android:layout_marginTop="@dimen/_30sdp"
            android:padding="@dimen/_5sdp"
            android:backgroundTint="@color/primary_color"
            android:textStyle="bold|italic"
            android:textSize="@dimen/_15sdp"
            android:text="Login -->" />
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:outlineAmbientShadowColor="@color/primary_color"
            android:outlineSpotShadowColor="@color/primary_color"
            android:layout_gravity="center"
            android:progressTint="@color/primary_color"
            android:visibility="gone"
            android:backgroundTint="@color/primary_color"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1.8">
        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---------- or Login with ----------"
            android:layout_gravity="center_horizontal"
            android:padding="@dimen/_2sdp"
            android:textColor="#6A707C"
            android:textSize="@dimen/_12ssp"
            android:textStyle="italic" />

        <androidx.cardview.widget.CardView
            android:id="@+id/cardView2"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_margin="@dimen/_19sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_gravity="center"
            app:cardCornerRadius="@dimen/_6sdp"
            app:cardElevation="2dp">

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_gravity="center"
                android:src="@drawable/google_black"
                android:padding="@dimen/_2sdp"
                android:textAlignment="center"
                app:layout_constraintHorizontal_bias="0.333" />
        </androidx.cardview.widget.CardView>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="0.7">

        <TextView
            android:id="@+id/registation_text_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_14sdp"
            android:padding="@dimen/_5sdp"
            android:text="@string/text_login_bottom"
            android:textAlignment="center"
            android:textSize="@dimen/_12ssp" />
    </LinearLayout>







</LinearLayout>