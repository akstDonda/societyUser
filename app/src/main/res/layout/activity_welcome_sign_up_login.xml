<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="6"
    android:layout_marginTop="@dimen/_10sdp"
    android:background="@color/white"
    tools:context=".welcome.WelcomeSignUpLogin">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/animation_lottieAnimationView_welcome"
        android:layout_width="412dp"
        android:layout_height="0dp"
        app:lottie_autoPlay="true"
        android:padding="@dimen/_30sdp"
        app:lottie_loop="false"
        android:layout_weight="3"
        app:lottie_rawRes="@raw/user_lottie" />

    <ImageView
        android:id="@+id/imageView_logo_welcome"
        android:layout_width="@dimen/_160sdp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="2"
        app:srcCompat="@drawable/logo_white" />
<!--    <TextView-->
<!--        android:id="@+id/textView"-->
<!--        android:layout_width="170dp"-->
<!--        android:layout_height="0dp"-->
<!--        android:text="@string/User"-->
<!--        android:gravity="center"-->
<!--        android:layout_weight="0.5"-->
<!--        android:textSize="@dimen/_30sdp"-->
<!--        android:layout_gravity="center_horizontal" />-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="1">
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_login_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/btn_normal"
            android:text="Login"
            android:textColor="@color/white" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_reg_welcome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_7sdp"
            android:text="Registration"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/btn_outline"
            />


    </LinearLayout>



</LinearLayout>