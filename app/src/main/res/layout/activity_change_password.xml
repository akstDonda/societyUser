<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".setting.ChangePasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerVertical="true">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@color/Primary_color"
            android:text="Change Password"
            android:textColor="@color/white"
            android:gravity="center"
            android:textSize="@dimen/_25sdp"
            android:textStyle="italic"
            android:inputType="textEmailAddress"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

        <EditText
            android:id="@+id/edt_currentPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_24sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Current Password"
            android:inputType="textPassword"
            android:padding="@dimen/_10sdp"
            android:longClickable="false"
            android:drawableEnd="@drawable/baseline_remove_red_eye_24"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/edt_newPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter New Password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:drawableEnd="@drawable/baseline_remove_red_eye_24"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />
        <EditText
            android:id="@+id/edt_conformPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_6sdp"
            android:layout_marginEnd="@dimen/_15sdp"
            android:background="@drawable/edit_text_background"
            android:hint="Enter Conform Password"
            android:inputType="textPassword"
            android:longClickable="false"
            android:drawableEnd="@drawable/baseline_remove_red_eye_24"
            android:padding="@dimen/_10sdp"
            tools:ignore="HardcodedText" />

        <Button
            android:id="@+id/btn_change_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/primary_color"
            android:layout_margin="@dimen/_26sdp"
            android:text="Change Password"/>
    </LinearLayout>

</RelativeLayout>